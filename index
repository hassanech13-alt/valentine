        .yes { background: var(--p); box-shadow: 0 0 20px rgba(255, 77, 109, 0.5); }
        .no { background: var(--dr); box-shadow: 0 0 20px rgba(128, 15, 47, 0.4); }
        .hidden { display: none !important; }
        .heart-wrap { height: 80px; display: flex; justify-content: center; margin-bottom: 20px; }
        .heart { background-color: var(--p); height: 40px; width: 40px; transform: rotate(-45deg); animation: beat 1.2s infinite; position: relative; }
        .heart:before, .heart:after { content: ""; background-color: var(--p); border-radius: 50%; height: 40px; width: 40px; position: absolute; }
        .heart:before { top: -20px; left: 0; } .heart:after { left: 20px; top: 0; }
