<body>
    <div class="night-sky"></div>
    <div class="card">
        <div id="setup">
            <div class="heart-wrap"><div class="heart"></div></div>
            <h1 class="title">Will you be my Valentine?</h1>
            <div class="timer">
                <div id="counter">0</div>
                <span class="label">Minutes Together</span>
            </div>
            <div class="btn-group">
                <button id="yesBtn" class="btn yes">Yes, I'd Love To!</button>
                <button id="noBtn" class="btn no">No</button>
            </div>
        </div>
        <div id="success" class="hidden">
            <h2 class="title">It's a Date! ❤️</h2>
            <p style="font-size: 1.2rem;">See you on the 14th!</p>
        </div>
    </div>
    <audio id="music" loop><source src="https://www.bensound.com/bensound-music/bensound-love.mp3" type="audio/mpeg"></audio>
    <script>
        const start = new Date(2024, 10, 30);
        function update() {
            const mins = Math.floor((new Date() - start) / 60000);
            document.getElementById('counter').innerText = mins.toLocaleString();
        }
        setInterval(update, 1000); update();
        const no = document.getElementById('noBtn');
        no.addEventListener('mouseover', () => {
            no.style.position = 'fixed';
            no.style.left = Math.random() * (window.innerWidth - 100) + 'px';
            no.style.top = Math.random() * (window.innerHeight - 50) + 'px';
        });
        document.getElementById('yesBtn').addEventListener('click', () => {
            document.getElementById('setup').classList.add('hidden');
            document.getElementById('success').classList.remove('hidden');
            document.getElementById('music').play();
            confetti({ particleCount: 200, spread: 100, origin: { y: 0.6 } });
        });
    </script>
</body>
